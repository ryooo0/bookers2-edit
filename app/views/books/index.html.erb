<% if @book.errors.any? %>
  <div class="alert"><%= @book.errors.count %>errors prohibited this obj from being saved:</div>
  <% @book.errors.full_messages.each do |message| %>
    <div class="alert1">・<%= message %></div>
  <% end %>
<% end %>

<div class="container">
  <div class="row mt-3">
    <div class="col-md-3">
      <%= render 'books/list', book: @book, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table>
        <thead>
          <tr class="bookindex-topic" height="50">
            <th width="70"></th>
            <th width="230">Title</th>
            <th width="230">Opinion</th>
            <th width="0"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr class="bookindex-row" height="67">
            <td>
              <%= link_to (attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40'), user_path(book.user_id) %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
            <td class="favorite-btn1_<%= book.id %>">
              <%= render 'favorites/favorite-btn', book: book %>
            </td>
            <td>
              <p>コメント数：<%= book.book_comments.count %></p>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>